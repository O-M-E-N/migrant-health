  <script>
    function selectRole(role) {
      if (role === 'migrant') {
        document.getElementById('roleContainer').style.display = 'none';
        document.getElementById('subtitle').style.display = 'none';
        document.getElementById('mainTagline').style.display = 'none';
        document.getElementById('loginSection').style.display = 'block';
      } else if (role === 'worker') {
        // Redirect to Community Worker login page
        window.location.href = 'community worker login.html';
      } else if (role === 'provider') {
        // Add provider logic here if needed
        alert("Provider selected");
      }
    }
    function navigate(option) {
      if(option === 'phone') {
        window.location.href = 'migrantregistration.html';
      } else if(option === 'abha') {
        alert("You selected: " + option);
        // window.location.href = /${option}-login.html;
      }
    }
    function goBack() {
      document.getElementById('loginSection').style.display = 'none';
      document.getElementById('roleContainer').style.display = 'flex';
      document.getElementById('subtitle').style.display = 'block';
      document.getElementById('mainTagline').style.display = 'block';
    }
  </script>
